# EditorConfig helps maintain consistent coding styles between different editors and IDEs
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.py]
indent_size = 4
max_line_length = 88

[*.{js,jsx,ts,tsx}]
indent_size = 2
quote_type = single

[*.md]
trim_trailing_whitespace = false
