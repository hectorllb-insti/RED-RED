# ====================================
# RED-RED Backend - DEVELOPMENT
# ====================================

# ====================================
# DJANGO CORE SETTINGS
# ====================================
SECRET_KEY=django-insecure-dev-key-only-for-development-123456789
DEBUG=True
ALLOWED_HOSTS=127.0.0.1,localhost,172.16.7.176,0.0.0.0

# ====================================
# NETWORK CONFIGURATION
# ====================================
LOCAL_IP=172.16.7.176
PORT=8000

# ====================================
# DATABASE CONFIGURATION
# ====================================
DB_ENGINE=sqlite3
DB_NAME=red_red_db
DB_HOST=mongodb://localhost:27017

# ====================================
# REDIS CONFIGURATION
# ====================================
# Vac√≠o para usar InMemoryChannelLayer en desarrollo
REDIS_URL=
REDIS_HOST=localhost
REDIS_PORT=6379

# ====================================
# CORS CONFIGURATION
# ====================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://172.16.7.176:3000
CORS_ALLOW_ALL_ORIGINS=True

# ====================================
# JWT CONFIGURATION
# ====================================
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=7
JWT_ROTATE_REFRESH_TOKENS=True

# ====================================
# MEDIA & STATIC FILES
# ====================================
MEDIA_ROOT=media
MEDIA_URL=/media/
STATIC_ROOT=staticfiles
STATIC_URL=/static/

# ====================================
# FILE UPLOAD LIMITS
# ====================================
MAX_PROFILE_IMAGE_SIZE=5
MAX_COVER_IMAGE_SIZE=10
MAX_POST_IMAGE_SIZE=10
ALLOWED_IMAGE_FORMATS=image/jpeg,image/png,image/jpg,image/webp,image/gif

# ====================================
# PAGINATION
# ====================================
PAGE_SIZE=20

# ====================================
# INTERNATIONALIZATION
# ====================================
LANGUAGE_CODE=es-es
TIME_ZONE=Europe/Madrid

# ====================================
# SECURITY SETTINGS
# ====================================
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0

# ====================================
# LOGGING
# ====================================
LOG_LEVEL=DEBUG
LOG_DIR=logs
